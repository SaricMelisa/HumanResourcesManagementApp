<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/styleCandidateDashboard.css">
</head>
<body>
    <header>
        <h1><%= title %></h1>
        <p>Welcome, <%= name %>!</p>
        <a href="/logout" class="logout-button">Logout</a>
    </header>
    <main>
        <h2>Active Job Posts</h2>
        <% if (jobPosts && jobPosts.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Deadline</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% jobPosts.forEach((job, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= job.title %></td>
                            <td><%= job.description %></td>
                            <td><%= new Date(job.application_deadline).toLocaleDateString() %></td>
                            <td><%= job.status %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No active job posts available.</p>
        <% } %>
    </main>
</body>
</html>
