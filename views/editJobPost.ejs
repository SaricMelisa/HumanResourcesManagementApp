<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/styleNewForm.css">
  <script src="/javascripts/scripts.js"></script>
</head>
<body>
  <header>
    <div>
      <h1><%= title %></h1>
      <p>Welcome, <%= name %>!</p>
    </div>
    <div class="header-right">
      <button class="hamburger" onclick="toggleMenu()">â˜°</button>
      <a href="/logout" class="logout-button">Logout</a>
      <div id="dropdownMenu" class="dropdown-menu">
        <a href="/admin">Admin Dashboard</a>
        <a href="/admin/job-posts">Manage Job Posts</a>
        <a href="/admin/evaluate-candidates">Evaluate Candidates</a>
        <a href="/admin/reports">View Reports</a>
      </div>
    </div>
  </header>

  <main>
    <form action="/admin/job-posts/<%= jobPost.id %>/edit" method="POST">
      <fieldset>
        <legend>Edit Job Post</legend>

        <div>
          <label for="title">Job Title:</label>
          <input type="text" id="title" name="title" value="<%= jobPost.title %>" required>
        </div>

        <div>
          <label for="description">Job Description:</label>
          <textarea id="description" name="description" required><%= jobPost.description %></textarea>
        </div>

        <div>
          <label for="application_deadline">Application Deadline:</label>
          <input type="date" id="application_deadline" name="application_deadline" value="<%= jobPost.application_deadline.toISOString().split('T')[0] %>" required>
        </div>

        <button type="submit">Save Changes</button>
      </fieldset>
    </form>
  </main>
</body>
</html>
